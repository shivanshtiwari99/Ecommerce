@{
    ViewData["Title"] = "Users";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-header">
    <div class="header-left">
        <h2>All Users</h2>
        <span class="total-badge">
            <span id="totalUsers">0</span> Total
        </span>
    </div>

    <div class="header-right">
        <input type="text" id="searchUser" placeholder="Search user..." />
    </div>
</div>

<div class="table-container">
    <table class="custom-table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Email</th>
                <th>Mobile</th>
                <th>Gender</th>
                <th>DOB</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody id="userTableBody">
        </tbody>
    </table>
</div>


<script>
    $(document).ready(function () {

        loadUsers();

        function loadUsers() {

            $.ajax({
                url: '/api/AdminApi/users',
                type: 'GET',
                success: function (res) {

                    let tbody = $("#userTableBody");
                    tbody.empty();

                    $("#totalUsers").text(res.length);

                    $.each(res, function (index, ele) {

                        let row = `
                            <tr data-name="${ele.name.toLowerCase()}">
                                <td>${ele.u_id}</td>
                                <td>${ele.name}</td>
                                <td>${ele.email}</td>
                                <td>${ele.mobile}</td>
                                <td>${ele.gender}</td>
                                <td>${formatDate(ele.dob)}</td>
                                <td>
                                    <a href="/User/Edit/${ele.u_id}" class="btn-icon edit">
                                        <i class="fa-solid fa-pen"></i>
                                    </a>
                                    <a href="/User/Delete/${ele.u_id}" class="btn-icon delete">
                                        <i class="fa-solid fa-trash"></i>
                                    </a>
                                </td>
                            </tr>
                        `;

                        tbody.append(row);
                    });
                }
            });
        }

        // Search
        $("#searchUser").on("keyup", function () {
            let value = $(this).val().toLowerCase();

            $("#userTableBody tr").filter(function () {
                $(this).toggle($(this).data("name").includes(value));
            });
        });

        function formatDate(dateString) {
            let date = new Date(dateString);
            return date.toLocaleDateString();
        }

    });
</script>
<style>
    body {
        background: #f4f6f7;
    }

    /* HEADER */
    .page-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 20px;
    }

    .header-left {
        display: flex;
        align-items: center;
        gap: 15px;
    }

        .header-left h2 {
            font-size: 22px;
            font-weight: 600;
            margin: 0;
        }

    .total-badge {
        background: #d4efdf;
        color: #117a65;
        padding: 6px 14px;
        border-radius: 20px;
        font-size: 14px;
    }

    .header-right input {
        padding: 8px 12px;
        border-radius: 8px;
        border: 1px solid #ddd;
        width: 220px;
        font-size: 14px;
    }

    /* TABLE */
    .table-container {
        background: white;
        border-radius: 12px;
        padding: 15px;
        box-shadow: 0 6px 18px rgba(0,0,0,0.05);
    }

    .custom-table {
        width: 100%;
        border-collapse: collapse;
        font-size: 14px;
    }

        .custom-table thead {
            background: #f8f9fa;
        }

        .custom-table th {
            text-align: left;
            padding: 12px;
            font-weight: 600;
            color: #2c3e50;
            border-bottom: 1px solid #eee;
        }

        .custom-table td {
            padding: 12px;
            border-bottom: 1px solid #f1f1f1;
            color: #555;
        }

        .custom-table tbody tr:hover {
            background: #f9f9f9;
        }

    /* ACTION ICONS */
    .btn-icon {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        width: 30px;
        height: 30px;
        border-radius: 8px;
        font-size: 13px;
        margin-right: 5px;
    }

        .btn-icon.edit {
            background: #d6eaf8;
            color: #21618c;
        }

        .btn-icon.delete {
            background: #f5b7b1;
            color: #922b21;
        }
</style>
