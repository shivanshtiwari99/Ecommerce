<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Ecommerce Website</title>
    <link href="~/css/bootstrap.css" rel="stylesheet" />
    <link href="~/css/all.min.css" rel="stylesheet" />
    <script src="~/js/bootstrap.bundle.js"></script>
    <script src="~/js/bootstrap.bundle.min.js"></script>
    @* <a href="~/lib/jquery/dist/jquery.min.map">~/lib/jquery/dist/jquery.min.map</a> *@
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <style>
        /* Body & Layout */
        body {
            margin: 0;
            font-family: 'Segoe UI', sans-serif;
            background: #f9f9f9;
            display: flex;
            color: #333;
        }

        /* Sidebar */
        .sidebar {
            width: 240px;
            background: #ffffff;
            border-right: 1px solid #ddd;
            height: 100vh;
            padding-top: 0;
            box-shadow: 2px 0 5px rgba(0,0,0,0.05);
            position: fixed;
            display: flex;
            flex-direction: column;
        }

        /* Sidebar top image/logo */
        .sidebar-top {
            height: 120px;
            background: #f0f0f0;
            display: flex;
            align-items: center;
            justify-content: center;
            border-bottom: 1px solid #ddd;
        }

            .sidebar-top img {
                max-height: 80px;
                max-width: 180px;
                object-fit: contain;
            }

        /* Sidebar links */
        .sidebar-links {
            flex: 1;
            padding-top: 1rem;
        }

            .sidebar-links a {
                display: flex;
                align-items: center;
                padding: 0.8rem 1.2rem;
                color: #333;
                margin-bottom: 0.5rem;
                border-radius: 6px;
                text-decoration: none;
                font-weight: 500;
                transition: 0.2s;
            }

                .sidebar-links a:hover {
                    background: #f0f0f0;
                    color: #008080;
                }

                .sidebar-links a i {
                    margin-right: 0.8rem;
                    font-size: 1.1rem;
                    color: #008080;
                }

        /* Main content */
        main {
            margin-left: 240px;
            padding: 2rem;
            flex: 1;
        }

        /* Cards */
        .card {
            background: white;
            padding: 1.5rem;
            border-radius: 10px;
            box-shadow: 0 2px 6px rgba(0,0,0,0.08);
            margin-bottom: 1rem;
            display: inline-block;
            width: 220px;
            text-align: center;
            cursor: pointer;
            transition: 0.3s;
        }

            .card i {
                font-size: 2rem;
                margin-bottom: 0.5rem;
                color: #008080;
            }

            .card:hover {
                transform: translateY(-5px);
                box-shadow: 0 6px 15px rgba(0,0,0,0.15);
            }

        .cards {
            display: flex;
            gap: 1rem;
            flex-wrap: wrap;
        }

        /* Headings */
        h2 {
            margin-bottom: 0.5rem;
        }

        p {
            margin-bottom: 1.5rem;
            color: #666;
        }
    </style>
</head>
<body>
    <!-- Sidebar -->
    <div class="sidebar">
        <!-- Top image/logo -->
        <div class="sidebar-top">
            <img src="~/photos/snap logo.png" />
            
        </div>

        <!-- Sidebar links -->
        <div class="sidebar-links">
            <a href="/admin/Dashboard"><i class="fa-solid fa-gauge"></i> Dashboard</a>
            <a href="/admin/Category"><i class="fa-solid fa-tags"></i> Categories</a>
            <a href="/admin/Product"><i class="fa-solid fa-box"></i> Products</a>
            
            <a href="/admin/users"><i class="fa-solid fa-warehouse"></i> Users</a>
            <a href="/BreachedProducts"><i class="fa-solid fa-triangle-exclamation"></i> Breached Products</a>
            <a href="/Orders"><i class="fa-solid fa-cart-shopping"></i> Orders</a>
            <a href="/Settings"><i class="fa-solid fa-gear"></i> Settings</a>
            <a href="/Admin/Logout"><i class="fa-solid fa-right-from-bracket"></i> Logout</a>
        </div>
    </div>

    <!-- Main Content -->
    <main>
        @RenderBody()
    </main>

    <script>
        // Make dashboard cards clickable
        document.addEventListener("DOMContentLoaded", function () {
            const cards = document.querySelectorAll(".card[data-link]");
            cards.forEach(card => {
                card.addEventListener("click", () => {
                    window.location.href = card.getAttribute("data-link");
                });
            });
        });
    </script>
</body>
</html>