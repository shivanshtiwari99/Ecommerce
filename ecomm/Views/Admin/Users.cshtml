        height: 30px;
        border-radius: 8px;
        font-size: 13px;
        margin-right: 5px;
    }

    .btn-delete {
        background: #ffe8e8;
        color: #d9534f;
        
        
    }

        .btn-delete:hover {
            background: #ffd4d4;
        }

    .btn-icon.edit {
        background: #d6eaf8;
        color: #21618c;
        border:none;
    }

    .btn-icon.delete {
        background: #f5b7b1;
        color: #922b21;
        border:none;
    }
</style>
