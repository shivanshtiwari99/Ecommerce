@{
    ViewData["Title"] = "Users";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-header">
    <div class="header-left">
        <h2>All Users</h2>
        <span class="total-badge">
            <span id="totalUsers">0</span> Total
        </span>
    </div>

    <div class="header-right">
        <input type="text" id="searchUser" placeholder="Search user..." />
    </div>
</div>

<div class="table-container">
    <table class="custom-table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Email</th>
                <th>Mobile</th>
                <th>Gender</th>
                <th>DOB</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody id="userTableBody">
        </tbody>
    </table>
</div>

<!--Edit user modal-->
<div class="modal fade" id="editUserModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">

            <!-- Header -->
            <div class="modal-header">
                <h5 class="modal-title">Edit User</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>

            <!-- Body -->
            <div class="modal-body">
                <form id="editUserForm">

                    <!-- Hidden ID -->
                    <input type="hidden" id="edit_u_id" />

                    <!-- Name -->
                    <div class="mb-2">
                        <label>Name</label>
                        <input type="text" class="form-control" id="edit_u_name">
                    </div>

                    <!-- Email -->
                    <div class="mb-2">
                        <label>Email</label>
                        <input type="email" readonly class="form-control" id="edit_u_email">
                    </div>

                    <!-- Mobile -->
                    <div class="mb-2">
                        <label>Mobile</label>
                        <input type="text" class="form-control" id="edit_u_mobile">
                    </div>

                    <!-- Gender -->
                    <div class="mb-2">
                        <label>Gender</label>
                        <select class="form-control" id="edit_u_gender">
                            <option value="">Select Gender</option>
                            <option value="Male">Male</option>
                            <option value="Female">Female</option>
                        </select>
                    </div>

                    <!-- DOB -->
                    <div class="mb-2">
                        <label>Date of Birth</label>
                        <input type="date" class="form-control" id="edit_u_dob">
                    </div>

                </form>
            </div>

            <!-- Footer -->
            <div class="modal-footer">
                <button type="button"
                        class="btn btn-secondary"
                        data-bs-dismiss="modal">
                    Cancel
                </button>

                <button type="submit"
                        form="editUserForm"
                        class="btn btn-primary">
                    Update User
                </button>
            </div>

        </div>
    </div>
</div>
<script>
    $(document).ready(function () {

        loadUsers();

        function loadUsers() {

            $.ajax({
                url: '/api/AdminApi/users',
                type: 'GET',
                headers: { "Authorization": "Bearer " + localStorage.getItem("token") },
                success: function (res) {

                    let tbody = $("#userTableBody");
                    tbody.empty();

                    $("#totalUsers").text(res.length);

                    $.each(res, function (index, ele) {

                        let row = `
                            <tr data-name="${ele.name.toLowerCase()}">
                                <td>${ele.u_id}</td>
                                <td>${ele.name}</td>
                                <td>${ele.email}</td>
                                <td>${ele.mobile}</td>
                                <td>${ele.gender}</td>
                                <td>${formatDate(ele.dob)}</td>
                                <td>
                                    <button class="btn-icon edit edit-user" data-id="${ele.u_id}">
                                        <i class="fa-solid fa-pen"></i>
                                    </button>
                                     <button class="btn-icon delete btn-delete" data-id="${ele.u_id}">
                                        <i class="fa-solid fa-trash"></i>
                                    </button>
                                </td>
                            </tr>
                        `;

                        tbody.append(row);
                    });
                }
            });
        }
                //edit modal
            $(document).on("click", ".edit-user", function () {
                $("#editUserModal").modal("show");
            });
            //prefill modal
                $(document).on("click", ".edit-user", function () {

        var uid = $(this).data("id");

        $.ajax({
            url: "/api/AdminApi/iduser?uid=" + uid,   
            type: "GET",
            headers: {
                "Authorization": "Bearer " + localStorage.getItem("token")
            },
            success: function (res) {

               var data = res[0];
                $("#edit_u_id").val(data.u_id);
                $("#edit_u_name").val(data.name);
                $("#edit_u_email").val(data.email);
                $("#edit_u_mobile").val(data.mobile);
                $("#edit_u_gender").val(data.gender);

                if (data.dob) {
                var date = new Date(data.dob);
                var formattedDate = date.toISOString().split('T')[0];
                $("#edit_u_dob").val(formattedDate);
                }
                // Modal open
                $("#editUserModal").modal("show");
            },
            error: function () {
                Swal.fire("Error!", "User load nahi hua.", "error");
            }
        });

    });

    //update Button
        $(document).on("submit", "#editUserForm", function (e) {

        e.preventDefault();

        var userObj = {
            u_id: $("#edit_u_id").val(),
            name: $("#edit_u_name").val(),
            email: $("#edit_u_email").val(),
            mobile: $("#edit_u_mobile").val(),
            gender: $("#edit_u_gender").val(),
            dob: $("#edit_u_dob").val()
        };

        $.ajax({
            url: "/api/AdminApi/updateUser",
            type: "PUT",
            contentType: "application/json",
            headers: {
                "Authorization": "Bearer " + localStorage.getItem("token")
            },
            data: JSON.stringify(userObj),

            success: function (res) {
                Swal.fire("Success!", "User Updated Successfully", "success");
                $("#editUserModal").modal("hide");
                loadUsers(); 
            },
            error: function () {
                Swal.fire("Error!", "Update Failed", "error");
            }
        });

    });

         // Delete USer
        $(document).on("click", ".btn-delete", function () {
            let uid = $(this).data("id");
            deleteUser(uid);
        });

        function deleteUser(uid) {
            Swal.fire({
                title: "Are you sure?",
                text: "You won't be able to revert this!",
                icon: "warning",
                showCancelButton: true,
                confirmButtonText: "Yes, delete it!"
            }).then((result) => {
                if (result.isConfirmed) {
                    $.ajax({
                        url: "/api/adminapi/deleteUser?uid=" + uid,
                        type: "DELETE",
                        headers: { "Authorization": "Bearer " + localStorage.getItem("token") },
                        success: function (res) {
                            Swal.fire("Deleted!", res, "success");
                            loadUsers();
                        },
                        error: function (err) {
                            console.log(err);
                            Swal.fire("Error!", "Delete failed!", "error");
                        }
                    });
                }
            });
        }

       
        $("#searchUser").on("keyup", function () {
            let value = $(this).val().toLowerCase();

            $("#userTableBody tr").filter(function () {
                $(this).toggle($(this).data("name").includes(value));
            });
        });

        function formatDate(dateString) {
            let date = new Date(dateString);
            return date.toLocaleDateString();
        }

    });
</script>
