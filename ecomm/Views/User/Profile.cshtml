
@{
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}
    

<div class="d-flex justify-content-center align-items-start" style="min-height: 80vh; padding-top:50px;">
    <div class="card shadow-lg rounded-4 overflow-hidden" style="width: 350px;">

        <!-- Top Banner -->
        <div style="position: relative; height:80px; background: linear-gradient(to right, #008080, #00b3b3);">
            <img src="/Photos/product/Cricket_2.webp" alt="Profile Avatar"
                 style="width:120px; height:120px; border-radius:50%; border:5px solid white;
                        position:absolute; bottom:-60px; left:50%; transform:translateX(-50%); object-fit:cover;">
        </div>

        <!-- Card Body -->
        <div class="card-body mt-5 text-center">
            <h3 id="userName" class="fw-bold mb-1">Loading...</h3>
            <p id="userEmail" class="text-muted mb-3">Loading...</p>

            <div class="text-start mt-3">
                <p><strong>Mobile:</strong> <span id="userMobile">Loading...</span></p>
                <p><strong>Date of Birth:</strong> <span id="userDob">Loading...</span></p>
                <p><strong>Gender:</strong> <span id="userGender">Loading...</span></p>
                <p><strong>Email:</strong> <span id="userEmail2">Loading...</span></p>
            </div>

            <div class="text-center mt-3">
                <button class="btn btn-primary px-4" data-bs-toggle="modal" data-bs-target="#editProfileModal">
                    Edit Profile
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Edit Profile Modal -->
<div class="modal fade" id="editProfileModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">

            <!-- Header -->
            <div class="modal-header">
                <h5 class="modal-title">Edit Profile</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>

            <!-- Body -->
            <div class="modal-body">
                <form>

                    <div class="mb-3">
                        <label class="form-label">Name</label>
                        <input type="text" id="editName" class="form-control" placeholder="Enter Name">
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Email</label>
                        <input type="email" id="editEmail" class="form-control" readonly>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Mobile</label>
                        <input type="text" id="editMobile" class="form-control" placeholder="Enter Mobile">
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Date of Birth</label>
                        <input type="date" id="editDob" class="form-control">
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Gender</label>
                        <select id="editGender" class="form-control">
                            <option>Select Gender</option>
                            <option>Male</option>
                            <option>Female</option>
                        </select>
                    </div>

                </form>
            </div>

            <!-- Footer -->
            <div class="modal-footer">
                <button class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button class="btn btn-primary" id="btnUpdateProfile">
                    Save Changes
                </button>
            </div>

        </div>
    </div>
</div>
<script>
    $(document).ready(function() {
        var token = localStorage.getItem("token");
        if (token) 
        {
            var payload = JSON.parse(atob(token.split('.')[1]));
            var email = payload["http://schemas.xmlsoap.org/ws/2005/05/identity/claims/emailaddress"];
        }

        $.ajax({
            url: '/api/UserApi/emailuser?email=' + email,
            type: 'GET',
            headers: {
                "Authorization": "Bearer " + localStorage.getItem("token") 
            },
            success: function(res){
                $("#userName").text(res[0].name);
                $("#userEmail").text(res[0].email);
                $("#userEmail2").text(res[0].email);
                $("#userMobile").text(res[0].mobile);
                $("#userDob").text(res[0].dob ? res[0].dob.split('T')[0] : '');
                $("#userGender").text(res[0].gender);
            },
            error: function(){
                console.log("Failed to load profile");
            }
        });
        $('#editProfileModal').on('show.bs.modal', function () {

        var token = localStorage.getItem("token");
        var payload = JSON.parse(atob(token.split('.')[1]));

        var email = payload["http://schemas.xmlsoap.org/ws/2005/05/identity/claims/emailaddress"];

        $.ajax({
            url: '/api/UserApi/emailuser?email=' + email,
            type: 'GET',
            headers: {
                "Authorization": "Bearer " + token
            },
            success: function (res) {

                var user = res[0];

                $("#editName").val(user.name);
                $("#editEmail").val(user.email);
                $("#editMobile").val(user.mobile);
                $("#editDob").val(user.dob ? user.dob.split('T')[0] : '');
                $("#editGender").val(user.gender);
            }
        });

    });
        $("#btnUpdateProfile").click(function () {

        var token = localStorage.getItem("token");

        var updatedUser = {
            name: $("#editName").val(),
            email: $("#editEmail").val(),   
            mobile: $("#editMobile").val(),
            dob: $("#editDob").val(),
            gender: $("#editGender").val()
        };

        $.ajax({
            url: '/api/UserApi/edituser',
            type: 'PUT',  
            contentType: 'application/json',
            headers: {
                "Authorization": "Bearer " + token
            },
            data: JSON.stringify(updatedUser),

            success: function () {
                Swal.fire("Success!", "User Updated Successfully", "success")
                .then(() => {

                $("#editProfileModal").modal('hide'); 
                location.reload();
                })
            },

            error: function () {
                Swal.fire("Error!", "Update failed!", "error");
            }
        });

    });
    });
</script>

